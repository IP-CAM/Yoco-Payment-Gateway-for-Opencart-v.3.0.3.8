																				{% endif %}
																				{% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"
                                        for="input-failed-order-status">{{ entry_failed_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_instapaywebpay_failed_order_status_id" id="input-failed-order-status"
                                            class="form-control">
                                        {% for order_status in order_statuses %}
                                        {% if order_status.order_status_id == payment_instapaywebpay_failed_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                        {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
																				{% endif %}
																				{% endfor %}
                                    </select>
                                </div>
                            </div> 
                        </div>
                    
