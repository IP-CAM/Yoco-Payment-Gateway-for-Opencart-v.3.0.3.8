
{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-paygate" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary">
                    <i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}"
                   class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-yoco"
                      class="form-horizontal">

                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a>
                        </li>
                        <li><a href="#tab-order-status" data-toggle="tab">{{ tab_order_status }}</a></li>
                        {# <li><a href="#tab-pay-methods" data-toggle="tab">{{ tab_pay_methods }}</a></li> #}
                    </ul>
                    <div class="tab-content">
                 

                        <div class="tab-pane active" id="tab-general">
                         <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_yoco_status" id="input-status" class="form-control">
                                        {% if payment_yoco_status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
																				{% endif %}
                                    </select>
                                </div>
                            </div>
                            <hr/>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input_live_public_key"><span data-toggle="tooltip" title="{{ help_live_public_key }}">{{ entry_live_public_key }}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_yoco_live_public_key" id="input_live_public_key"
                                            value="{{ payment_yoco_live_public_key }}" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input_live_secret_key "><span data-toggle="tooltip" title="{{ help_live_secret_key }}">{{ entry_live_secret_key }}</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="payment_yoco_live_secret_key" id="input_live_secret_key "
                                            value="{{ payment_yoco_live_secret_key }}" class="form-control">
                                </div>
                            </div>
                            <hr/>
                              <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-testmode"><span data-toggle="tooltip" title="{{ help_test }}">{{ entry_test }}</span></label>
                                <div class="col-sm-10">
                                    <select name="payment_yoco_testmode" id="input-testmode" class="form-control">
                                        {% if payment_yoco_testmode %}
                                            <option value="test" selected="selected">{{ text_testmode }}</option>
                                            <option value="live">{{ text_livemode }}</option>
                                        {% else %}
                                            <option value="test">{{ text_testmode }}</option>
                                            <option value="live" selected="selected">{{ text_livemode }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input_test_public_key"><span data-toggle="tooltip" title="{{ help_test_public_key }}">{{ entry_test_public_key }}</span></label>
